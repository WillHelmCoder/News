@model ComentarioViewModel


@using (Html.BeginForm("AddComment", "Home", FormMethod.Post))
{
    <div class="form-group form-group-margin-bot">
        <div class="row hidden-xs">
            <div class="col-sm-6 form-group form-post-width">
                <p><strong>Tu opini&oacute;n es muy importante.</strong></p>
                @Html.LabelFor(model => model.Comentario, "Contenido", new { @class = "pull-left" })
                @Html.TextAreaFor(model => model.Comentario, new { @class = "form-control", @placeholder = "Escribe un comentario..." })
                @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "text-danger" })
            </div>
            @Html.HiddenFor(model => model.NewsId)
        </div>
        <div class="form-group hidden-xs">
            <input type="submit" class="btn btn-success pull-right" value="Publicar" />

        </div>
    </div>
}