@model List<EditorListViewModel>
@{
    ViewBag.Title = "Mis editores";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Mis editores (@Model.Count())</h2>

<div class="row">
    <div class="col-lg-6 col-md-6 col-xs-12 col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Ordenados por numero de visitas
                </h3>
            </div>
            @if (Model.Count() > 0)
            {
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>
                                Nombre
                            </th>
                            <th>
                                Visitas generadas
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (item.UserName != null)
                                    {   @Html.ActionLink(item.UserName, "EditorDetails", new { id = item.UserId })}
                                    else
                                    {  @Html.ActionLink(item.Email, "EditorDetails", new { id = item.UserId })}
                                </td>
                                <td>
                                    @item.GeneratedViews
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="panel-body">
                    Lo sentimos, no cuentas con editores a&uacute;n. Vuelva m&aacute;s tarde.
                </div>
            }
        </div>
    </div>
</div>