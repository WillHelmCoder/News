@model Dal.Models.Report

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Detalles</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        Contenido
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Magazine.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Magazine.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Media.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Media.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NewsId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NewsId)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsPositive)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsPositive)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsPaid)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsPaid)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Impact)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Impact)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Comments)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Comments)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsDeleted)
            </dd>

        </dl>

    </div>
    <div class="panel-footer">
        @Html.ActionLink("Editar", "Edit", new { id = Model.ReportId }, new { @class = "btn btn-success" })
        @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default pull-right" })
    </div>
</div>
