@model Dal.Models.KindOfQuestionViewModel

@{
    ViewBag.Title = "OptionDelete";
}

<h2>Eliminar opción</h2>

<hr />

<div class="row">
    <div class="col-md-6">
        <table class="table table-hover table-striped">
            <tr>
                <th>
                    @Html.DisplayName("Descripción")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.OptionsList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                Acciones <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Editar", "OptionEdit", new { id = item.OptionId })</li>
                                <li>@Html.ActionLink("Detalles", "OptionDetails", new { id = item.OptionId })</li>
                                <li>@Html.ActionLink("Eliminar", "OptionDelete", new { id = item.OptionId })</li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    ¿Seguro que desea eliminar el elemento?
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>
                            T&iacute;tulo
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                    </dl>
                </div>
                <div class="panel-footer">
                    @using (Html.BeginForm())
                    {
                        @Html.HiddenFor(model => model.OptionId)
                        <div class="form-actions no-color">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default pull-right" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>