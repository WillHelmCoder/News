@model Dal.Models.KeyPointsContainer

@{
    ViewBag.Title = "Detalles de dato";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Detalles de dato</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            Contenido
            <span class="pull-right">
                <i class="fa fa-star"></i> = Categor&iacute;a padre
            </span>
        </h3>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayName("Nombre")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayName("Guid")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Kguid)
            </dd>
        </dl>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Editar", "Edit", new { id = Model.KeyPointsContainerId }, new { @class = "btn btn-success" })
        @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default pull-right" })
    </div>
</div>