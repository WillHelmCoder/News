@model IEnumerable<Dal.Models.AdCategory>

@{
    ViewBag.Title = "Campañas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Campa&ntilde;as (@Model.Count())</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-primary btn-xs" })
        </h3>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Fecha inicio
                    </th>
                    <th>
                        Fecha fin
                    </th>
                    <th>
                        Activo
                    </th>
                    <th class="text-right">
                        Opciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Active)
                        </td>
                        <td>
                            <div class="btn-group pull-right">
                                <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                    Opciones <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="@Url.Action("Index", "Advertises", new { id = item.AdCategoryId})">
                                            Anuncios
                                        </a>
                                    </li>
                                    <li class="divider">
                                    </li>
                                    <li>@Html.ActionLink("Editar", "Edit", new { id = item.AdCategoryId })</li>
                                    <li>@Html.ActionLink("Eliminar", "Delete", new { id = item.AdCategoryId })</li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <div class="panel-body">
            Lo sentimos, no hay categor&iacute;as de anuncios a&uacute;n. Te recomendamos crear uno dando click <a href="@Url.Action("Create")">AQU&Iacute;</a>
        </div>
    }
</div>