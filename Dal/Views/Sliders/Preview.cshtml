@model List<Slide>
@{
    ViewBag.Title = "Preview";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section ExtraCss{
<link href="~/Content/AdminLayout/css/slick.css" rel="stylesheet" />   
}
<div class="row">
    <div class="col-lg-6 col-md-6 col-xs-12 col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Vista previa de mi slider
                </h3>
            </div>
            <div class="preview-sliderContainer">
                <div class="slider-for">
                    @foreach (var item in Model)
                    {<div><img src="http://thecontent.mx/content/data/@item.News.Image" alt="@item.News.Alt"/>
                     </div>
                    }
                </div>
                <div class="slider-nav">
                    @foreach (var item in Model)
                    {<div><img src="http://thecontent.mx/content/data/@item.News.Image" alt="@item.News.Alt" /></div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section ExtraScript{
    <script src="~/Scripts/slick.min.js"></script>
    <script>
        $('.slider-for').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            arrows: false,
            fade: true,
            asNavFor: '.slider-nav'
        });
        $('.slider-nav').slick({
            slidesToShow: 3,
            slidesToScroll: 1,
            asNavFor: '.slider-for',
            dots: false,
            arrows:false,
            centerMode: true,
            focusOnSelect: true
        });
    </script>
}