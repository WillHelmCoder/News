@model IEnumerable<Dal.Models.Advertise>

@{
    ViewBag.Title = "Anuncios";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Anuncios (@Model.Count())</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            @Html.ActionLink("Agregar", "Create", new { adCatId = ViewBag.AdCategoryId }, new { @class = "btn btn-primary btn-xs" })
        </h3>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Grupo
                    </th>
                    <th>
                        Contenido
                    </th>
                    <th>
                        Imagen
                    </th>
                    <th>
                        Url
                    </th>
                    <th>
                        IFrame
                    </th>
                    <th class="text-right">
                        Opciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AdCategory.Name)
                        </td>
                        <td>
                            @(item.Content ?? "N/A")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Image)
                        </td>
                        <td>
                            @(item.Url ?? "N/A")
                        </td>
                        <td>
                            @(item.IFrame ?? "N/A")
                        </td>
                        <td>
                            <div class="btn-group pull-right">
                                <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                    Opciones <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Editar", "Edit", new { id = item.AdvertiseId })</li>
                                    <li>@Html.ActionLink("Eliminar", "Delete", new { id = item.AdvertiseId })</li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <div class="panel-body">
            Lo sentimos, no hay registros a&uacute;n. Te recomendamos crear uno dando click <a href="@Url.Action("Create", new { adCatId = ViewBag.AdCategoryId })">aqu&iacute;</a>
        </div>
    }
</div>