@model Dal.Models.ListViewModel
@{
    ViewBag.Title = "Eliminar lista";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    ¿Desea eliminar esta lista?
                </h3>
            </div>
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        Nombre
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>
                        Contenido
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Content)
                    </dd>
                </dl>
            </div>
            <div class="panel-footer">
                @using (Html.BeginForm())
                {

                    <input name="ListOfItemsId" id="ListOfItemsId" value="@Model.ItemListId" hidden />
                    <button type="submit" class="btn btn-danger pull-right">Eliminar</button>
                    <span>
                        <strong>IMPORTANTE:</strong> Una vez confirmada, esta operaci&oacute;n no podr&aacute; ser deshecha
                    </span>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                }
            </div>
        </div>
    </div>
</div>

