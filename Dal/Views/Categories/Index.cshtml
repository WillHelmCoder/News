@model IEnumerable<Dal.Models.Category>

@{
    ViewBag.Title = "Mis categorías";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>
    Mis categor&iacute;as (@Model.Count())
</h2>

<div class="row">
    <div class="col-lg-6 col-md-6 col-xs-12 col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-primary" })
            </div>
            <table class="table table-hover table-striped">
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th class="text-right">
                        Opciones
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <div class="btn-group pull-right">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                    Opciones <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Editar", "Edit", new { id = item.CategoryId })</li>
                                    <li>@Html.ActionLink("Eliminar", "Delete", new { id = item.CategoryId })</li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>