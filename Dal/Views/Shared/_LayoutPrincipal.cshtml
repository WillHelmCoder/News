<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="es-MX" xml:lang="es-MX">
<!-- head -->
<head>
    <title>@ViewBag.Title - The Content</title>

    <!-- Meta Tags -->
    <meta charset="utf-8" />
    <meta name="googlebot" content="noodp" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Somos un medio independiente, con el objetivo de informar y difundir contenidos positivos." />

    @RenderSection("References", false)

    <!-- favicon -->
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />

    <!-- stylesheets -->
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.css" />
    <link href="~/Content/AdminLayout/css/bootstrap.css" rel="stylesheet" />
    <link href="http://www.wineux.mx/Content/QuickRef.css" rel="stylesheet" />
    <link href="~/Content/myStyleSheet.css" rel="stylesheet" />

    <!-- fonts -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,700|Roboto+Slab:300|Roboto:400,700" rel="stylesheet">

</head>
<!-- body -->
<body>
    <div id="alert-container">
    </div>

    <header class="land-header">
        <a href="@Url.Action("Index", "Home")">
            <img src="~/Content/images/The_Content_Logo_Blanco.png" id="navbar-img" />
        </a>
        <a href="@Url.Action("Login", "Account")" class="btn btn-transparent-blue pull-right montserrat-light font-14px hidden-sm hidden-xs">
            Inicia sesi&oacute;n
        </a>
        <a href="@Url.Action("Login", "Account")" class="btn btn-transparent-white pull-right montserrat-light font-14px hidden-md hidden-lg" id="login-btn-xs">
            Inicia sesi&oacute;n
        </a>
    </header>

    @RenderBody()

    <!-- footer -->
    <footer class="land-footer">
        <span class="text-left">
            @DateTime.Now.Year - Todos los derechos reservados Comulink
        </span>
        <span class="pull-right">
            +52 (662) 1 51 12 36
        </span>
    </footer>

    <!-- scripts -->
    <script src="~/Content/AdminLayout/js/jquery.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Content/scriptstemplate")
    @RenderSection("Scripts", false)
    <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.min.js"></script>
    <script src="~/Scripts/system-alerts.js"></script>

    <script type="text/javascript">
        $("#alert-container").on("click", function () {
            $(this).fadeAlert(0);
        });

        @{if (TempData[Configuration.MessageMagicString] != null){ <text>$("#alert-container").showAlert("@Html.Raw(TempData[Configuration.MessageMagicString].ToString())", "@Html.Raw(TempData[Configuration.AlertMagicString].ToString())");</text>}}

        $(function () {
            var validationErrors = $(".validation-summary-errors");
            validationErrors.addClass('alert alert-danger');
            validationErrors.prepend('<button type="button" class="close" data-dismiss="alert" style="color:#f6f6f6" aria-hidden="true">&times;</button>');
        });
    </script>

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g;
            m.parentNode.insertBefore(a, m);
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-61642248-1', 'auto');
        ga('send', 'pageview');

    </script>
</body>
</html>